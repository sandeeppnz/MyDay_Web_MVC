@model SANSurveyWebAPI.ViewModels.Web.ForgotPasswordViewModel
@{
    Layout = null;
    ViewBag.Title = "Password Retrieval";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Password Retrieval - @SANSurveyWebAPI.Constants.AppHeader</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Login2.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
</head>
<body class="loginBody">
    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="container TextAlignCenter">
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
            <div class="col-lg-4 col-md-6 col-sm-8">
                @*<div class="logo">
                    </div>*@
                <div class="row loginbox">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <h3>Forgot your password?</h3>
                    <h4>No problem. We are here to help.</h4>
                    <br />
                    <h5>Enter your login email address and we'll send you an email to create a new password</h5>

                    @*<h4>Enter your email.</h4>
                        <hr />*@

                    <div class="col-lg-12 col-md-12 col-sm-12">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control TextAlignCenter", @placeholder = "Enter your login email address" })
                    </div>
                    <br />

                    <br />
                    <br />
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <input id="GetPasswordButton" type="submit" class="btn btn-success btn-lg btn-block" value="Create new password" />
                    </div>
                </div>
                <div class="row forGotPassword">
                    If you know your password, 
                    @Html.ActionLink("login here", "Login")
                    <br />
                    <br />

                    Still having trouble? 
                    <a target="_blank" href='/#contact'>Contact us</a>
                    @*@Html.ActionLink("Please contact us", "Contact", "Home")
.*@
                </div>

                @Html.Partial("_Footer")

            
            </div>
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
        </div>
    }
</body>
</html>


<script>
    function Loader() {
        $.blockUI({
            css: {
                border: 'none',
                //padding: '10px',
                //backgroundColor: '#000',
                backgroundColor: 'transparent',
                //color: '#fff',
                opacity: .9
            },
            message: '<img src="/Images/comment.svg" />'
        });
    }


    $(document).ready(function () {

        $('#GetPasswordButton').click(function (e) {
            Loader();
        });
    });
</script>
