@model SANSurveyWebAPI.ViewModels.Web.RegisterWAMFeedbackVM

@{
    Layout = "~/Views/Shared/_LayoutRegistration.cshtml";
    ViewBag.Title = "Feedback";
}


@using (Html.BeginForm("WAMFeedback", "Register", FormMethod.Post, new { name = "frmWAMCompleted", id = "frmWAMCompleted" }))
{
    <div class="container OtherPageContainer remodal-bg">
        <div class="formBox">
            <div id="">
                <h3>@ViewBag.Title</h3>
            </div>

            <div class="panel panel-default" id="PanelComplete">
                <div class="panel-heading">
                    <h4>
                        Thank you for signing up to the MyDay study! We will send you an email when a new survey is available.
                    </h4>
                </div>

                @Html.HiddenFor(model => model.ProfileId)
                @Html.HiddenFor(model => model.MaxStep)

                <div class="panel-body">
                    <h4>Is there anything else you would like to tell us?</h4>
                    @Html.TextAreaFor(model => model.Feedback, htmlAttributes: new { @class = "form-control", @rows = 8, @placeholder="Leave a message..." })
                </div>
                <center>
                    <div style="padding:10px">
                        <button class="btn btn-success btn-lg" id="btnNext" type="button"><i class="fa fa-paper-plane"></i>&nbsp;&nbsp;Submit</button>
                    </div>
                </center>
            </div>


        </div>
        @Html.Partial("_Footer")

    </div>

}

<script type="text/javascript">

    $(document).ready(function () {
        $('#btnNext').on("click", function (e) {
            $('#frmWAMCompleted').submit()
        });
    })
</script>
