@model SANSurveyWebAPI.ViewModels.Web.IntroductionViewModel
@{
    Layout = null;
    ViewBag.Title = @Session["DemoForUser"].ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - @SANSurveyWebAPI.Constants.AppHeader</title>

    @Styles.Render("~/Content/siteRegistration")
    @Scripts.Render("~/bundles/siteRegistration")

    <link href="~/Content/Login2.css" rel="stylesheet" />

</head>

<body class="loginBody">
   
    @using (Html.BeginForm("LoopSurvey", "Survey3", FormMethod.Post, new { name = "frmLoopSurvey", id = "frmLoopSurvey", @class = "form-horizontal", role = "form" }))
    {

        @*@Html.HiddenFor(m => m.Uid, new { @id = "uid" })*@


        <div class="container">

            <div class="consentbox" style="padding:20px;">

                <center>
                    <div style="background-color:#b2d8d8;padding:20px">
                        <h1>                          
                                Welcome to @Session["ForClient"].ToString() Survey!
    
                            </h1>
    
                            <h4>
                                @if (@Session["DemoForUser"].ToString() == "WAM")
                                { <span>Help us to understand what you do and how you feel in your workspace.</span> }
                                else
                                { <span>Measuring the Experiential Enjoyment of Junior Doctors Working Day Using the Day Reconstruction Method is being carried out in accordance with Health Education England’s commitment to manage the provision of training programmes and maintain patient safety.</span>}
                            </h4>
                        <center>
                            <div style="padding:10px">
                                <button name="button" value="Begin" id="btnStartMyDay" class="btn btn-success btn-lg" type="submit"><i class="fa fa-paper-plane"></i>&nbsp;&nbsp;Click to Start</button>
                            </div>
                        </center>
                        <h5>
                            This @Session["DemoForUser"].ToString() survey should take around 10-15 minutes to complete.
                        </h5>
                    </div>
                    <br />
                    <h5>
                        @if (@Session["DemoForUser"].ToString() == "WAM")
                        { }
                        else
                        {
                            <span>
                                Your data is being managed in compliance with the regulations as set out in the Data Protection Act and Health Education England’s Privacy notice which can be found at
                                <a target="_blank" href="https://heeoe.hee.nhs.uk/recruitment_privacy_data">
                                    https://heeoe.hee.nhs.uk/recruitment_privacy_data
                                </a>
                            </span>
                        }
                    </h5>
                </center>
            </div>
            @Html.Partial("_Footer")
        </div>

    }
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<script src="https://da7xgjtj801h2.cloudfront.net/2016.3.1118/js/kendo.all.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.blockUI/2.70/jquery.blockUI.min.js"></script>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/iCheck/skins/flat/green.css" rel="stylesheet" />
<script src="~/Scripts/iCheck/icheck.min.js"></script>
<link href="~/Content/formValidation/formValidation.min.css" rel="stylesheet" />
<script src="~/Scripts/formValidation/formValidation.min.js"></script>
<script src="~/Scripts/formValidation/framework/bootstrap.min.js"></script>

<script src="~/Scripts/remodal/remodal.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>


<script type="text/javascript">

   
    $(document).ready(function () {
        $('#btnNext').on("click", function (e) {
            e.preventDefault();
            $('#frmLoopSurvey').submit();
        });
    });
</script>
