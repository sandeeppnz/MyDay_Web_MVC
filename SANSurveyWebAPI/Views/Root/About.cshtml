    <!-- section: contact -->
    <section id="contact" class="section orange">
        <div class="container" style="padding-top:20px;color:black">
            <h4>Contact Us</h4>
            <p>
                Do you have a question about the MyDay surveys?&nbsp;
                If you have a question or need help with your surveys,
                leave a message below and someone from the MyDay team will be in touch.
            </p>
            <div class="blankdivider30">
            </div>
            <div class="row">
                <div class="span12">
                    <div class="cform" id="contact-form">
                        <div id="sendmessage">Your message has been sent. Thank you!</div>
                        <div id="errormessage"></div>
                        <form action="" method="post" role="form" class="contactForm" accept-charset="UTF-8">
                            <div class="row">
                                <div class="span6">
                                    <div class="field your-name form-group">
                                        <label for="name">Your Name</label>
                                        <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                        <div class="validation"></div>
                                    </div>
                                    <div class="field form-group">
                                        <label for="name">Preferred Contact</label>
                                        <select name="preferredContact" class="form-control"
                                                style="height: 50px" id="preferredContact" data-rule="required">
                                            <option value="Email">Email</option>
                                            <option value="Phone">Phone</option>
                                        </select>
                                        <div class="validation"></div>
                                    </div>
                                    <div class="field your-name form-group">
                                        <label for="name">Preferred Time</label>
                                        <select name="preferredTime" class="form-control"
                                                style="height: 50px" id="preferredTime" data-rule="required">
                                            <option selected>Anytime</option>
                                            <option>Morning</option>
                                            <option>Evening</option>
                                        </select>
                                        <div class="validation"></div>
                                    </div>
                                    <div class="field your-email form-group" id="divEmail">
                                        <label for="email">Your Email</label>

                                        <input type="text" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                                        <div class="validation"></div>
                                    </div>
                                    <div class="field your-email form-group" id="divPhone">
                                        <label for="phoneNumber">Your Phone Number</label>
                                        @*<input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="Your Phone Number" data-rule="required" />*@
                                        <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="Your Phone Number" />
                                        @*<div class="validation"></div>*@
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="field message form-group">
                                        <label for="message">Your Message</label>
                                        <textarea class="form-control" name="message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                                        <div class="validation"></div>
                                    </div>
                                    @*<input type="submit" value="Send message" class="btn btn-success pull-left">*@
                                    <button type="submit" class="btn btn-success btn-block">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- ./span12 -->
            </div>
        </div>
